---
import ToggleTheme from "./ToggleTheme.astro";
const { pathname } = Astro.url;
---

<nav class="bg-white-300 dark:bg-black-300 rounded-lg dark:text-teal-50">
  <div
    class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/dyno.png" alt="Dynologo" class="h-10" />
    </a>
    <button
      type="button"
      class="inline-flex h-10 w-10 rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:ring-2 focus:ring-gray-200 focus:outline-none md:hidden dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-solid-bg"
      aria-expanded="false"
      id="navbar-solid-trigger"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="h-5 w-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>

    <!-- Desktop Navigation -->
    <div class="hidden w-full md:block md:w-auto">
      <ul
        class="dark:bg-black-300 flex flex-col rounded-lg bg-gray-50 font-medium md:mt-0 md:flex-row md:space-x-8 md:border-0 md:bg-transparent rtl:space-x-reverse dark:border-gray-700 md:dark:bg-transparent"
      >
        <li>
          <a
            href="/"
            class={`block rounded-sm px-3 py-2 md:border-0 md:p-0 ${
              pathname === "/"
                ? "bg-teal-500 text-white dark:bg-teal-dark-600 dark:text-white"
                : "text-gray-900 dark:text-white hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 dark:hover:bg-gray-700 dark:hover:text-teal-600 md:dark:hover:bg-transparent"
            }`}>Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            class={`block rounded-sm px-3 py-2 md:border-0 md:p-0 ${
              pathname === "/about"
                ? "bg-teal-500 text-white dark:bg-teal-500 dark:text-white"
                : "text-gray-900 dark:text-white hover:bg-gray-100 md:hover:bg-teal-100 md:hover:text-gray-900 dark:hover:bg-teal- dark:hover:text-white"
            }`}>About</a
          >
        </li>
        <li>
          <a
            href="/projects"
            class={`block rounded-sm px-3 py-2 md:border-0 md:p-0 ${
              pathname === "/projects"
                ? "bg-teal-500 text-white dark:bg-teal-500 dark:text-white"
                : "text-gray-900 dark:text-white hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 dark:hover:bg-gray-700 dark:hover:text-teal-600 md:dark:hover:bg-transparent"
            }`}>Projects</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class={`block rounded-sm px-3 py-2 md:border-0 md:p-0 ${
              pathname === "/contact"
                ? "bg-teal-500 text-white dark:bg-teal-500 dark:text-white"
                : "text-gray-900 dark:text-white hover:bg-gray-100 md:hover:bg-transparent md:hover:text-teal-600 dark:hover:bg-gray-700 dark:hover:text-teal-600 md:dark:hover:bg-transparent"
            }`}>Contact</a
          >
        </li>
        <li class="flex items-center">
          <ToggleTheme />
        </li>
      </ul>
    </div>
  </div>

  <!-- Mobile Navigation Menu - Appears below navbar when toggled -->
  <div class="hidden w-full p-4 md:hidden" id="navbar-mobile-menu">
    <div class="flex flex-col gap-3">
      <a
        href="/"
        class={`flex items-center justify-center rounded-lg py-3 text-center font-medium ${
          pathname === "/"
            ? "bg-teal-500 text-white dark:bg-teal-dark-600"
            : "bg-gray-100 text-gray-900 dark:bg-gray-700 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-600"
        }`}
      >
        Home
      </a>

      <div class="grid grid-cols-2 gap-3">
        <a
          href="/about"
          class={`flex items-center justify-center rounded-lg py-3 text-center font-medium ${
            pathname === "/about"
              ? "bg-teal-500 text-white dark:bg-teal-500"
              : "bg-gray-100 text-gray-900 dark:bg-gray-700 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-600"
          }`}
        >
          About
        </a>
        <a
          href="/contact"
          class={`flex items-center justify-center rounded-lg py-3 text-center font-medium ${
            pathname === "/contact"
              ? "bg-teal-500 text-white dark:bg-teal-500"
              : "bg-gray-100 text-gray-900 dark:bg-gray-700 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-600"
          }`}
        >
          Contact
        </a>
      </div>

      <a
        href="/projects"
        class={`flex items-center justify-center rounded-lg py-3 text-center font-medium ${
          pathname === "/projects"
            ? "bg-teal-500 text-white dark:bg-teal-500"
            : "bg-gray-100 text-gray-900 dark:bg-gray-700 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-600"
        }`}
      >
        Projects
      </a>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <div class="flex space-x-2">
        <a
          href="#"
          class="p-2 text-teal-600 hover:text-teal-700 dark:text-teal-400 dark:hover:text-teal-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="p-2 text-teal-600 hover:text-teal-700 dark:text-teal-400 dark:hover:text-teal-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
      </div>

      <div class="flex items-center">
        <ToggleTheme />
      </div>
    </div>
  </div>
</nav>

<script>
  import { Collapse } from "flowbite";
  import type { CollapseInterface } from "flowbite";

  // Original mobile menu setup
  const $targetEl: HTMLElement | null =
    document.getElementById("navbar-mobile-menu");
  if (!$targetEl) {
    throw new Error("Target element with ID 'navbar-solid-bg' not found.");
  }

  const $triggerEl = document.getElementById(
    "navbar-solid-trigger",
  ) as HTMLElement | null;
  if (!$triggerEl) {
    throw new Error(
      "Trigger element with ID 'navbar-solid-trigger' not found.",
    );
  }

  // Initialize Flowbite Collapse for backward compatibility
  const _collapse: CollapseInterface = new Collapse($targetEl, $triggerEl);
</script>
