<button
  id="theme-toggle"
  type="button"
  class="flex items-center gap-2 rounded-lg text-gray-500 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 focus:outline-none md:p-0 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-700"
>
  <span
    id="theme-toggle-text"
    class="block rounded-sm px-3 py-2 text-gray-900 hover:bg-gray-100 md:hidden dark:text-white dark:hover:bg-gray-700 dark:hover:text-white"
    >Toggle Theme</span
  >
  <svg
    id="icon-theme-dark"
    class="hidden h-6 w-6 text-gray-900 dark:text-white"
    fill="currentColor"
    viewBox="0 -960 960 960"
    xmlns="http://www.w3.org/2000/svg"
    ><path
      d="M480-120q-150 0-255-105T120-480q0-150 105-255t255-105q14 0 27.5 1t26.5 3q-41 29-65.5 75.5T444-660q0 90 63 153t153 63q55 0 101-24.5t75-65.5q2 13 3 26.5t1 27.5q0 150-105 255T480-120Zm0-80q88 0 158-48.5T740-375q-20 5-40 8t-40 3q-123 0-209.5-86.5T364-660q0-20 3-40t8-40q-78 32-126.5 102T200-480q0 116 82 198t198 82Zm-10-270Z"
    ></path></svg
  >
  <svg
    id="icon-theme-light"
    class="hidden h-6 w-6 text-gray-900 dark:text-white"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
    ><path
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      fill-rule="evenodd"
      clip-rule="evenodd"></path></svg
  >
</button>

<script>
  const button = document.querySelector("#theme-toggle");
  const toggleText = document.querySelector("#theme-toggle-text");
  const iconDark = document.querySelector("#icon-theme-dark");
  const iconLight = document.querySelector("#icon-theme-light");

  function updateUI(currentTheme: string) {
    const nextTheme = currentTheme === "light" ? "dark" : "light";

    toggleText!.textContent = `Toggle theme to ${nextTheme}`;

    if (currentTheme === "light") {
      iconLight?.classList.remove("hidden");
      iconDark?.classList.add("hidden");
    } else {
      iconDark?.classList.remove("hidden");
      iconLight?.classList.add("hidden");
    }
  }

  let currentTheme = document.documentElement.dataset.theme || "light";
  updateUI(currentTheme);

  button!.addEventListener("click", () => {
    currentTheme = currentTheme === "light" ? "dark" : "light";
    document.documentElement.dataset.theme = currentTheme;
    localStorage.setItem("theme", currentTheme);
    updateUI(currentTheme);
  });
</script>
